<div class="container">
	<div id="content">
		<div class="container-fluid">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="pull-left">{{ user_info.login }} <i class="fa fa-user"></i> {{ user_info.firstname }} {{ user_info.lastname }}</div>
					<div class="pull-right"><a href="{{ logout }}"><i class="fa fa-sign-out" aria-hidden="true"></i> выход</a></div>
					<div class="clearfix"></div>
					<h3 class="text-center panel-title">{{ title }}</h3>
				</div>
				<div class="panel-body">
					<div class="pull-left">
						<a href="{{ back_link }}" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Назад"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></a>
					</div>
					<div class="clearfix"></div>
					<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-product" class="form-horizontal mt">
						<div class="col-sm-12">
							<div class="form-group">
								<input type="text" placeholder="Опишите задачу" name="text" value="{{ text }}" class="form-control">
								<input type="hidden" name="task_id" value="{{ task_id }}" class="form-control">
								{% if error_text %}
									<div class="text-danger">{{ error_text }}</div>
								{% endif %}
							</div>
						</div>
						<div class="text-right">
							<button type="submit" class="btn btn-primary"><i class="fa fa-plus-circle"></i> {{ edit }}</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>